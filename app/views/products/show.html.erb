<div class="container-fluid">
    <div class="content-wrapper">
		<div class="item-container">
			<div class="container">
				<div class="col-md-12">
					<div class="col-md-5">
            <% @product.photos.each do |photo| %>
              <%= image_tag photo.image.medium, class:"product-image" %>
            <% end %>
          </div>

				<div class="col-md-7">
					<div class="product-title"><h1><%= @product.name %></h1></div>
					<div class="product-desc"><%= @product.description %></div>
					<hr>
					<div class="product-price">&euro; <%= @product.price %></div>
					<div class="product-stock">
            <% if @product.availability %>
              In stock
            <% else %>
              Out of stock!
            <% end %>
          </div>
					<hr>
					<div>
						<button type="button" class="btn btn-success">
							<%= link_to "Add to cart", shopping_cart_path(product_id: @product.id, quantity: 5) %>
						</button>
            <button type="button" class="btn btn-success">
							<%= link_to "Edit", edit_product_path(@product) %>
						</button>
            <button type="button" class="btn btn-success">
							<%= link_to "Delete", product_path(@product.id), method: :delete, data: { confirm: "Are you sure?" } %>
						</button>
          </div>
				</div>
			</div>
		</div>
	</div>
</div>
