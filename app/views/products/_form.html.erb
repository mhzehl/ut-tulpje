<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :price %>
  <%= f.number_field :price, class: :text_field, step: 0.01 %>

  <label>Departments</label>

  <%= f.label :department %>
  <%= f.collection_select(:department_id, Department.all, :id, :name) %>

  <label>Publish this product?</label>

  <div class="form-group">
    <%= f.check_box :availability %> In Stock
  </div>

  <%= f.submit (@product.new_record? ? "Create" : "Update") %>
<% end %>
