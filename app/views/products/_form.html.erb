<%= form_for @product, html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <div class="">
    <span class="btn btn-default">
      Upload Photos
      <%= file_field_tag "images[]", type: :file, multiple: false %>
    </span>
  </div>


  <div id="photos">
    <%= render 'photos/list' %>
  </div>


  <%= f.label :price %>
  <%= f.number_field :price, class: :text_field, step: 0.01 %>

  <label>Departments</label>

  <%= f.label :department %>
  <%= f.collection_select(:department_id, Department.all, :id, :name) %>

  <div class="form-group">
    <%= f.check_box :availability %> In Stock
  </div>

  <%= f.submit (@product.new_record? ? "Create" : "Update") %>
<% end %>
