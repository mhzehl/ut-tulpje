<article class="products">

  <h1>Our Products</h1>

  <ul>
  <% @products.each do |product| %>
    <li>
    <% if !(product.image_url.nil?) %>
      <%= link_to (image_tag product.image_url), product_path(product) %>
      <% end %>
      <div class="product-card">
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
      </div>
    </li>
  <% end %>
  </ul>

</article>
