      <td ><strong>Total</strong></td>
      <td></td>
      <td></td>
      <td class="text-right"><strong><%=number_to_currency(@order_total, precision: 2, separator: ',', unit: 'â‚¬')%></strong></td>

    </thead>
  </tbody>
</table>

