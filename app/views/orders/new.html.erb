<h1>Checkout</h1>
<table class="table table-striped table-hover">
  <thead class="thead-inverse">
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total</th>
  </thead>
  <tbody>
    <% @shopping_cart.each do |lineitem| debugger%>

    
    <tr>
      <td><%= lineitem[0].name %></td>
      <td><%= lineitem[1] %></td>
      <td><%= Money.new(lineitem[0].price).format %></td>
      <td><%= Money.new(lineitem[0].price * lineitem[1]).format %></td>
    </tr>
    <% end %>
    <thead>
      <td><strong>Total</strong></td>
      <td colspan="2">&nbsp;</td>
      <td><%= Money.new(@order_total).format %></td>
    </thead>
  </tbody>
</table>

<%= link_to "Place order", orders_path, method: :post, class: "btn btn-success" %>
