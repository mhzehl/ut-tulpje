<h1>Shopping Cart</h1>
<table class="table table-striped table-hover">
  <thead class="thead-inverse">
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total</th>
  </thead>
  <tbody>
    <% @price_total = [] %>
    <% @shopping_cart.items.each do |product, quantity| %>
      <% product_total_price = Product.find(product).price * quantity %>
      <% @price_total << product_total_price  %>

          <tr>
            <td><%= Product.find(product).name %></td>
            <td><%= quantity %></td>
            <td><%= Product.find(product).price %></td>
            <td class="text-right"><%= number_to_currency(product_total_price, precision: 2, separator: ',', unit: '')%></td>
          </tr>
    <% end %>
